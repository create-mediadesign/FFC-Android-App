<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/actionbar_bg_top" />
        </shape>
    </item>
    
    <item android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/actionbar_bg_bottom" />
        </shape>
    </item>
    
    <item
        android:bottom="1dp"
        android:top="1dp">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/actionbar_bg_end"
                android:startColor="@color/actionbar_bg_start" />
        </shape>
    </item>
</layer-list>
